@model VideoConverter.Controllers.YoutubeResult

@using System.Globalization
@using Resources
@{
    ViewBag.Title = "how to download facebook videos";
    Layout = "../Shared/_Layout.cshtml";
    string lang2 = ViewData.FirstOrDefault(x => x.Key.Equals("lang")).Value.ToString();
    var culture = new CultureInfo(lang2);

    ViewData.Add("langName", culture.NativeName);
    ViewData.Add("langC", lang2);

    string cano = lang2 == "en" ? "" : lang2;
    ViewData.Add("canonical", "http://vidfrom.com/how-to-download-facebook-videos");

    if (lang2 == "ar" || lang2 == "fa")
    {
        ViewData.Add("dir", "rtl");
    }
    else
    {
        ViewData.Add("dir", "ltr");
    }

    string pTitle = Token.ResourceManager.GetString("HowToDownFaceTilte", culture);
    ViewData.Add("pTitle", pTitle);

    string pDesc = Token.ResourceManager.GetString("HowToDownFaceDesc", culture);
    ViewData.Add("pDesc", pDesc);

    if (lang2 == "en")
    {
        ViewData.Add("langCFlag", "us");
    }
    else if (lang2 == "fa")
    {
        ViewData.Add("langCFlag", "ir");
    }
    else if (lang2 == "el")
    {
        ViewData.Add("langCFlag", "gr");
    }
    else if (lang2 == "ja")
    {
        ViewData.Add("langCFlag", "jp");
    }
    else if (lang2 == "nb")
    {
        ViewData.Add("langCFlag", "no");
    }
    else if (lang2 == "sq")
    {
        ViewData.Add("langCFlag", "al");
    }
    else if (lang2 == "cs")
    {
        ViewData.Add("langCFlag", "cz");
    }
    else
    {
        ViewData.Add("langCFlag", lang2);
    }
}
@section head
{
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">

    <style type="text/css">
        .fa-twitter {
            color: #55ACEE;
        }

        .fa-youtube-play {
            color: #AA0F09;
        }

        .fa-soundcloud {
            color: #FF6600;
            font-size: 29px;
        }

        .fa-vimeo {
            color: #2AB8E7;
        }

        .fa-facebook-square {
            color: #3A5BAD;
        }

        .fa-vine {
            color: #02C191;
        }

        .fa-instagram {
            color: #8B5741;
        }

        .fa-mixcloud {
            font-size: 29px;
        }

        .liveleak {
            width: 32px;
            height: 32px;
            background-repeat: no-repeat;
            -moz-background-size: 64px;
            -o-background-size: 64px;
            -webkit-background-size: 64px;
            background-size: 64px;
        }

        .bl {
            content: url('data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==');
        }

        .lead a, .wel a {
            cursor: text;
        }

        .ic {
            max-width: 256px;
            max-height: 256px;
            background: url(data:image/svg+xml;utf8;base64,) center no-repeat;
        }

        .radds {
            margin-top: 5%;
        }

        .headads {
            text-align: center;
            padding-bottom: 1%;
        }

        #det {
            margin-top: 2%;
        }

        @@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
            .dg {
                vertical-align: bottom;
            }
        }
    </style>
}

<div class="container" style="margin-top: 40px">
    <div class="row">
        <div id="deto">
            <div id="indet" class="det">
                <a class="aim" href=" @Html.DisplayFor(modelItem => Model.Url) " target=" _blank" rel="nofollow"><img src=" @Html.DisplayFor(modelItem => Model.ImgLink) " class=" im" style="max-width: 250px;" /></a>
                <br /><b>Title: </b> <a href="" class="lnk" id="lnktit" target="_blank" rel="nofollow">@Html.DisplayFor(modelItem => Model.Title)</a><br />
                <br /><b>Duration: </b> <span class="du">@Html.DisplayFor(modelItem => Model.Duration) </span>
                <br clear="both" /><br /><hr style="margin-top: 5px;" />

            </div>
        </div>
    </div>
    <div class="row" style="margin-bottom: 3%;">
        <div id="resaultP" class="panel panel-default" >
            <div class="panel-heading ph" style="background-color: rgb(239, 239, 239);">
                <h3 class="panel-title" style="color: #378CE6;">@Token.SelectFormat</h3>
            </div>
            <hr style="margin-top: 0; margin-bottom: 0; border-top: 1px solid #276BE8;">
            <div class="panel-body pb">
                <div id="res">
                    @{
                        int num = 18972;
                    foreach (var m in Model.DownloadLinks)
                    {
                        if (!m.LinkTitle.Contains("Only"))
                        {
                            if (m.LinkTitle.Contains("("))
                            {
                               m.LinkTitle= m.LinkTitle.Replace("(", "").Replace(")", "");
                            }
                            if (m.LinkTitle.Contains("Max"))
                            {
                                m.LinkTitle = m.LinkTitle.Replace("Max", "");
                            }
                      <input type="radio" data-dname="@m.LinkTitle" name="lk" id="@num" value="@m.Link"/>
                        <label for="">@m.LinkTitle</label>
                        <br/>
                        num++;
                        }
                       
                    }
                        }
                </div>
                <br />
                <a id="dwn" class="btn btn-success btn-block " href="#resaultP" download="1"><span class="fa-stack"><i class="fa fa-download fa-stack-1x"></i></span> @Token.DownloadVideo</a>
                <button class="btn btn-info btn-block cn" id="dwnmp" style="border-top-left-radius: 4px; border-bottom-left-radius: 4px; background-color: #00adeb; color: rgb(247, 245, 244); font-size: large; font-weight: bolder; display: none;" type="button">
                    <span class="fa-stack ic"><i class="fa fa-stack-1x"></i></span> @Token.DownloadMp3 - 320 Kbps
                </button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $("input[type='radio']").click(function() {
                var href = $(this).val();
                var n = $(this).attr("data-dname");
                var d = $('#dwn');
                d.attr("href", href);
                d.attr("download", n);

            });
        });
    </script>
}